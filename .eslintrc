{
  "extends": "standard",
  "plugins": [
    "mocha"
  ],
  "rules": {
    "mocha/no-exclusive-tests": "error",
    "mocha/no-mocha-arrows": "error",
    "max-len": [ "error", {
      "code": 80,
      "comments": 80,
      "ignorePattern": "^.*require\\s*\\("
    } ],
    "array-bracket-spacing": [ "error", "always" ],
    "object-curly-spacing": [ "error", "always"]
  }
}
